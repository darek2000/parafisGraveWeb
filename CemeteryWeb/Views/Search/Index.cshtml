@model CemeteryWeb.Models.SearchModel

<script>
	function searchGrave(e) {
		var valName = $("#Name").val();
		var valSurname = $("#Surname").val();

		$.ajax({
			type: "POST",
			url: '/Search/SearchGrave',
			data: { namePerson: valName, surnamePerson: valSurname },
			success: function (data, textStatus, jqXHR) {
				$('#graveInfo').html(data);
			},
			error: function (a, b, c) {
				alert("Wystąpił bład podczas pobierania danych. Proszę skonatkować się ze wsparciem aplikacji")
			}
		});
	}
</script>

<div class="row">
	<div class="col-md-7">
		<h3>Mapa/Zdjecie</h3>
	</div>
	<div class="col-md-5">
		<h3>Wyszukiwarka Osób Zmarłych</h3><br />
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						@Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label" })<br />
						@Html.TextBoxFor(m => m.Name, htmlAttributes: new { placeholder = "Wprowadź imię", @style = "padding: 5px; width: 200px" })
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						@Html.LabelFor(m => m.Surname, htmlAttributes: new { @class = "control-label" })<br />
						@Html.TextBoxFor(m => m.Surname, htmlAttributes: new { placeholder = "Wprowadź nazwisko", @style = "padding: 5px; width: 200px" })
					</div>
				</div>
			</div>
			<button class="w-100 btn btn-lg btn-primary" type="button" onclick="searchGrave()">Wyszukaj</button>
		<br /><br />
		<div id="graveInfo"></div>
	</div>
</div>